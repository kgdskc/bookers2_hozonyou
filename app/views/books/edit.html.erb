<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>error
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_with model:@book, local:true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title, autofocus: true, id:"inputTitle", class: 'form-control book_title' %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, autofocus: true, id:"inputBody", class: 'form-control book_body' %>
          </div>
          <div>
          <%= f.submit "Update Book", class: 'btn btn-success' %>
          </div>
        <% end %>
        <%= link_to "Show", book_path(@book), class:"link-text" %>
          |
        <%= link_to "Back", books_path, class:"link-text" %>
      </div>
    </div>
  </div>