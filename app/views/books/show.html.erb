<main>
  <%= render 'books/list', user: @user, book: @book, book_new: @book_new %>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <th>
            <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'png', fallback: "No_image.png", class: 'attachment user profile_image' %>
              <br>
              <%= @user.name %>
            <% end %>
          </th>
          <th>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class: 'btn btn-sm btn-success edit_book_1112' %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-sm btn-danger destroy_book_1112' %></td>
            
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>
  </div>
</main>